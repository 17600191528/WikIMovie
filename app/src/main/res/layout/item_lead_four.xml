<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/lead4_img"
        android:layout_width="@dimen/dp_205"
        android:layout_height="@dimen/dp_205"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_50"
        android:src="@mipmap/lead4" />

    <TextView
        android:id="@+id/lead4_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lead4_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_60"
        android:text="八维移动5K五组作品"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lead4_txt1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_21"
        android:text="带您开启一段美好的电影之旅"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />

</RelativeLayout>