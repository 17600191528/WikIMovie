<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/lead2_img"
        android:layout_width="@dimen/dp_205"
        android:layout_height="@dimen/dp_205"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_50"
        android:src="@mipmap/lead2" />

    <TextView
        android:id="@+id/lead2_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lead2_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_60"
        android:text="一场电影"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lead2_txt1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_21"
        android:text="看遍人生百态"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />

</RelativeLayout>